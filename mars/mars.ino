void loop() {

  int JOYSTICK = analogRead(A1); // joystick y-value (the x-value broke lmao)

  if (JOYSTICK < 460 && ROVER_X > -92) { // go leftwards
    ROVER_X -= 10; 
  }
  if (JOYSTICK > 560 && ROVER_X < 108) { // go rightwards
    ROVER_X += 10; 
  }

  if (ROVER_X == -92) { // head west
    digitalWrite(LED, HIGH);
    exploreMars();
    digitalWrite(LED, LOW);
    ROVER_X += 60;
  }

  if (ROVER_X == 108) { // head east
    digitalWrite(LED, HIGH);
//    exploreMars();
    digitalWrite(LED, LOW);
    ROVER_X -= 60;
  }

  if (digitalRead(BUTTON) == HIGH) {
    digitalWrite(LED, HIGH);
    showDirections();
    digitalWrite(LED, LOW);
  }

  // picture loop
  u8g2.firstPage();
  do {
    drawPerseverance();
  } while (u8g2.nextPage());

}
