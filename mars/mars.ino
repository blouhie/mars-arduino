void playMarsAnimation() {

  for (uint8_t i = 0; i < 3; i++) {

    // draw small mars
    u8g2.clearBuffer();
    u8g2.drawXBMP(30, 0, small_mars_width, small_mars_height, small_mars_bits);
    u8g2.sendBuffer();
    delay(50);

    // draw big mars
    u8g2.clearBuffer();
    u8g2.drawXBMP(30, 0, big_mars_width, big_mars_height, big_mars_bits);
    u8g2.sendBuffer();
    delay(1000);
  }
  delay(500);
}

void playPerseveranceSequence() {

  // buzz and flash sequence
  for (uint8_t i = 0; i < 3; i++) {
    analogWrite(BUZZER, HIGH);
    digitalWrite(LED, HIGH);
    drawShortText("ALERT", 45, 500);
    delay(250);
    analogWrite(BUZZER, LOW);
    digitalWrite(LED, LOW);
    drawShortText("ALERT", 45, 500);
    delay(250);
  }

  // landing animation
  while (ROVER_Y < 15) {
    u8g2.clearBuffer();
    u8g2.drawXBMP(ROVER_X, ROVER_Y, perseverance_width, perseverance_height, perseverance_bits);
    u8g2.sendBuffer();
    delay(350);
    ROVER_Y += 10;
  }
  ROVER_Y -= 10;
  delay(1500);
}

void drawPerseverance() {
  u8g2.drawXBMP(ROVER_X, ROVER_Y, perseverance_width, perseverance_height, perseverance_bits);
}

